---
import BaseLayout from '../layouts/BaseLayout.astro';
import PurposeList from '../components/PurposeList.astro';
import type { ToolsData } from '../types';
import toolsData from '@data/tools.json';

const { meta } = toolsData as ToolsData;
---

<BaseLayout title="About - Awesome AI Tools" description="About this project">
  <article class="about">
    <h2>About This Project</h2>

    <section>
      <h3>Overview</h3>
      <p>{meta.introduction.overview}</p>
    </section>

    <section>
      <h3>Our Purpose</h3>
      <PurposeList items={meta.introduction.purpose} variant="check" />
    </section>

    <section>
      <h3>Contributing</h3>
      <p>{meta.introduction.contributing}</p>
    </section>

    <section>
      <h3>Last Updated</h3>
      <p>{meta.lastUpdated}</p>
    </section>

    <div class="actions">
      <a href="/awesome-ai-tools/" class="button">Browse Tools</a>
      <a href="https://github.com/johnhenry/awesome-ai-tools" class="button secondary" target="_blank" rel="noopener noreferrer">View on GitHub</a>
    </div>
  </article>

  <style>
    .about {
      max-width: 900px;
      margin: 0 auto;
    }

    .about h2 {
      font-size: 1.75rem;
      margin-bottom: 1.5rem;
      color: var(--color-primary);
    }

    .about section {
      margin-bottom: 1.5rem;
      padding: 1.25rem;
      background: var(--color-hover);
      border: 1px solid var(--color-border);
      border-radius: 6px;
    }

    .about h3 {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
      color: var(--color-text);
    }

    .about p {
      font-size: 0.95rem;
      line-height: 1.6;
    }

    .actions {
      display: flex;
      gap: 1rem;
      margin-top: 1.5rem;
      flex-wrap: wrap;
    }

    .button {
      display: inline-block;
      padding: 0.625rem 1.25rem;
      background: var(--color-primary);
      color: white;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.9rem;
      transition: opacity 0.2s;
    }

    .button:hover {
      opacity: 0.9;
      text-decoration: none;
    }

    .button.secondary {
      background: var(--color-secondary);
    }
  </style>
</BaseLayout>
