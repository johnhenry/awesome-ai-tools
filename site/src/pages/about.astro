---
import BaseLayout from '../layouts/BaseLayout.astro';
import toolsData from '../tools.json';

const { meta } = toolsData;
---

<BaseLayout title="About - Awesome AI Tools" description="About this project">
  <article class="about">
    <h2>About This Project</h2>

    <section>
      <h3>Overview</h3>
      <p>{meta.introduction.overview}</p>
    </section>

    <section>
      <h3>Our Purpose</h3>
      <ul class="purpose-list">
        {meta.introduction.purpose.map((item: string) => {
          const [title, ...description] = item.split('**: ');
          const cleanTitle = title.replace('**', '');
          return (
            <li>
              <strong>{cleanTitle}</strong>: {description.join('**: ')}
            </li>
          );
        })}
      </ul>
    </section>

    <section>
      <h3>Contributing</h3>
      <p>{meta.introduction.contributing}</p>
    </section>

    <section>
      <h3>Last Updated</h3>
      <p>{meta.lastUpdated}</p>
    </section>

    <div class="actions">
      <a href="/" class="button">Browse Tools</a>
      <a href="https://github.com/johnhenry/awesome-ai-tools" class="button secondary" target="_blank" rel="noopener noreferrer">View on GitHub</a>
    </div>
  </article>

  <style>
    .about {
      max-width: 800px;
      margin: 0 auto;
    }

    .about h2 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: var(--color-primary);
    }

    .about section {
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: var(--color-hover);
      border: 1px solid var(--color-border);
      border-radius: 8px;
    }

    .about h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: var(--color-text);
    }

    .purpose-list {
      list-style: none;
      padding: 0;
    }

    .purpose-list li {
      margin-bottom: 1rem;
      padding-left: 1.5rem;
      position: relative;
    }

    .purpose-list li::before {
      content: "âœ“";
      position: absolute;
      left: 0;
      color: var(--color-primary);
      font-weight: bold;
    }

    .actions {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }

    .button {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background: var(--color-primary);
      color: white;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      transition: opacity 0.2s;
    }

    .button:hover {
      opacity: 0.9;
      text-decoration: none;
    }

    .button.secondary {
      background: var(--color-secondary);
    }
  </style>
</BaseLayout>
